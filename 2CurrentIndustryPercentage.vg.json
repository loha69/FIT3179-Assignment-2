{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Percentage of Job Vacancies 2024",
  "width": 400,
  "height": 400,
  "title": {
    "text": "Percentage of Job Vacancies 2024",
    "fontSize": 18,
    "anchor": "start",
    "color": "#000"
  },
  "data": {
    "url": "data/IndustryPieChart.csv"
  },
  "selection": {
    "industry_highlight": {
      "type": "multi", 
      "fields": ["Industry "],  
      "bind": "legend"
    }
  },
  "mark": {"type": "arc", "innerRadius": 100, "tooltip": true},
  "encoding": {
    "theta": {"field": "Industry %", "type": "quantitative", "stack": "normalize"},
    "color": {"field": "Industry ", "type": "nominal", "scale": {"scheme": "tableau20"}},  
    "tooltip": [
      {"field": "Industry ", "type": "nominal", "title": "Industry"},
      {"field": "Industry %", "type": "quantitative", "title": "Percentage (%)"},
      {"field": "Job Vacancies", "type": "quantitative", "title": "No of Job Vacancies"}  
    ],
    "opacity": {
      "condition": {"selection": "industry_highlight", "value": 1},
      "value": 0.6
    }
  }
}
