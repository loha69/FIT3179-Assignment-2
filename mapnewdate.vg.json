{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "projection": {"type": "mercator"},
  "height": 500,
  "width": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/loha69/FIT3179-Assignment-2/refs/heads/main/data/States%20and%20Territory%20Map.csv"
  },
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/loha69/FIT3179-Assignment-2/refs/heads/main/STE_2016_AUST.json",
          "format": {
            "type": "topojson",
            "feature": "STE_2016_AUST"
          }
        },
        "key": "properties.STE_NAME16"
      }, 
      "as": "geo"
    }
  ],
  
  "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
  "encoding": {
    "shape":{"field": "geo", "type": "geojson"},
    "color": {
      "field": "Value",
      "type": "quantitative",
      "scale": {"scheme": "greens"},
      "legend": {"title": "Job Vacancies (000)"}
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Job Vacancies (000)"
      },
      {"field": "month", "type": "ordinal", "title": "Month"},
      {"field": "year", "type": "ordinal", "title": "Year"}
    ]
  }
}
