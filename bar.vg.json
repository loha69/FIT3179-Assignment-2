{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A horizontal bar chart showing industry change from before COVID-19.",
  "title": {
    "text": "Industry Change from Before COVID-19 (%)",
    "fontSize": 18,
    "anchor": "start",
    "color": "#000"
  },  
  "width": 850,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/loha69/FIT3179-Assignment-2/refs/heads/main/data/IndustryBar.csv"
  },
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Industry",
      "type": "nominal",
      "sort": "-x", 
      "axis": {
        "title": null,
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "x": {
      "field": "Change from before COVID-19 (%)",
      "type": "quantitative",
      "axis": {
        "title": "Change from before COVID-19 (%)",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "tooltip": [
      {"field": "Industry", "type": "nominal", "title": "Industry"},
      {"field": "Change from before COVID-19 (%)", "type": "nominal", "title": "Percentage Change (%)"}
    ]
  
  }
}
