{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300, "height": 200,
  "title": "Job Vacancies in Australia of Different Industry Aug 2023- Aug 2024",
  "data": {
    "url": "https://raw.githubusercontent.com/loha69/FIT3179-Assignment-2/refs/heads/main/data/IndustryStackedLine.csv"
  },
  "selection":{
    "industry_highlight": {
      "type": "multi", 
      "fields": ["Industry "],
      "bind": "legend"
    }
  },
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "yearmonth", "field": "Date",
      "axis": {"format": "%d-%m-%Y"}
    },
    "y": {
      "aggregate": "sum", "field": "Value"
    },
    "color": { 
      "field": "Industry ",
      "scale": {"scheme": "category10"}
      }, 
    "opacity": {
      "condition": {"selection": "industry_highlight", "value": 1},
      "value": 0.6
    }
  }
}